<h4 class="center m-2">宛先を選んでください</h4><br>
<div class="row">
  <div class="col-md-5 offset-1">
    <div class="content-bg m-1">
      <%= render 'index', users: @users %>
    </div>
  </div>
  <div class="col-md-6 p-1">
    <!--検索フォーム-->
    <%= form_with url: public_users_path, method: :get, local: true do |f| %>
      <%= f.text_field :content %>
      <%= f.select :model, options_for_select({"User" => "user", "Group" => "group"}) %>
      <%= f.select :method, options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}) %>
      <%= f.submit "検索" %>
    <% end %>

      <!--検索結果表示-->
    <% if @model == 'user' %>
      <div class="content-bg m-1">
        <h5 class= "center" >"<%= @content %>"検索結果</h5><br>
        <div class= "center">
          <div><%= render 'public/users/index', users: @records %></div>
        </div>
      <% elsif @model == 'group' %>
        <h5 class= "center">"<%= @content %>"検索結果</h5><br>
        <div class= "center">
          <div><%= render 'public/groups/index', groups: @records %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>