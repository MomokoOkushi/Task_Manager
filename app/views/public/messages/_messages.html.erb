<% messages.each do |message| %>
  <% if message.send_user_id == current_user.id %>
    <!--メッセージの送信者がログインユーザーであった場合-->
    <div class="mb-1 d-flex">
      <div class="rounded bg-success text-black text-break" style="max-width:50%">
        <%= message.message %>
      </div>
      <%= message.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %>
    </div>
  <% else %>
    <!--メッセージの受信者がログインユーザーであった場合-->
    <div class="d-flex flex-row-reverse mb-1">
      <div class="rounded bg-secondary text-white text-break" style="max-width:50%;">
        <%= message.message %>
      </div>
      <%= message.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %>
    </div>
  <% end %>
<% end %>

