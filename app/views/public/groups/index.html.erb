<div class="contain p-5">
  <div class="row m-2">
    <h5>グループを作成　</h5>
      <%= form_with model: @group, url: public_groups_path do |f| %>
        <%= f.text_field :name, placeholder: "新しいグループ名", maxlength: 30 %>
        <%= f.submit '作成' %>
      <% end %>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="content-bg">
        <h5>マイグループ</h5>
        <% @my_groups.each do |my_group| %>
          <table>
            <tr>
              <td><%= link_to my_group.name, public_group_path(my_group) %></td>
              <td><%= link_to "退会する", public_group_group_user_path(my_group, current_user), method: :delete %></td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="content-bg">
        <h5>グループ一覧</h5>
        <%= render 'public/groups/index', groups: @groups %>
      </div>
    </div>
    <!--検索機能-->
    <div class="col-md-4">
      <div class="content-bg p-2">
        <div class="mb-2">
          <%= render "/public/searches/form" %>
        </div>
        <!--検索結果表示-->
        <% if @content %>
          <div class= "center">
            <div>
              <h5>"<%= @content %>"検索結果</h5><br>
              <%= render 'public/groups/index', groups: @records %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>