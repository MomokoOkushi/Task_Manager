<div class="contain">
  <div class="row">
      <div class="col-md-5">
        <%= form_with model:@task, url:public_group_task_path(@task.group, @task), method: :patch do |f| %>
          <p>日付　<%= f.datetime_select :start_time %></p><br>
          <p>担当者</p>
          
          <%= f.fields_for :task_users do |i| %>
          <%= i.label :task_status, "表記名" %>
          <%= i.select :task_status, TaskUser.task_statuses_i18n.invert, class: "form-control" %>
      <br>
  <% end %>
      </div>
      <div class="col-md-7">
          <%= f.text_field :title, placeholder: "タスクタイトル", maxlength: 30 %><br>

          <%= f.text_area :detail, placeholder: "タスク詳細", maxlength: 30, rows: 10 %><br>
          <%= f.submit '編集を保存' %>
        <% end %>
     </div>
  </div>
</div>