<h3><%= @task.group.name %>タスク</h3>
<div  class="container">
  <%= link_to "一覧に戻る",public_group_path(@group) %><br>
  <%= link_to "タスクを編集する",edit_public_group_task_path(@group, @task) %>

  <div class="row">
    <div class="col">
      <p>日付：<%= @task.start_time%></p><br>
      <p>管理者：<%= @task.user.name %></p><br>

      <p>担当者一覧</p>
      <table>
        <thead>
          <tr>
            <th>氏名</th>
            <th>進捗</th>
            <th>完了確認</th>
          </tr>
        </thead>
        <% @task.task_users.each do |task_user| %>
          <tbody>
            <tr>
              <td><%= task_user.user.name %></td>  <!--タスクの担当者を一覧にして呼び出す-->
              <td><%= I18n.t("enums.task_user.task_status.#{task_user.task_status}") %></td> <!--タスク進捗を日本語訳して表示-->
              <td>
                <% if task_user.is_complete == false %> <!--タスク管理者からの完了確認状況-->
                  未確認
                <% else %>
                  確認済
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
    <div class="col">
      <%= @task.title %><br>
      <%= @task.detail %>
    </div>
    <div class="col">
      <div class="comments_index">
        <% @task.comments.each do |comment| %>
          <%= comment.user.name %><%= comment.created_at %><br>
          <%= comment.message %><br>
        <% end %>
      </div>
      <div class="new_comment">
        <%= form_with model: [@task, @comment], url: public_group_task_comments_path(@task.group, @task), method: :post do |f| %>
          <%= f.text_area :message, rows: '5', placeholder: "新しいコメントを記入" %>
          <%= f.submit "送信"%>
        <% end%>
      </div>
    </div>
  </div>
</div>
