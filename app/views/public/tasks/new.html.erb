<div class="contain">
  <div class="row">
      <div class="col-md-5">
        <%= form_with  url: public_group_tasks_path, method: :post do |f| %>
          <p>日付　<%= f.datetime_select :start_time %></p><br>
          <p>担当者</p>
          <%= f. collection_check_boxes :user_ids, @group.users, :id, :name do |user| %>
            <%= user.label {user.check_box + user.text } %><br>
          <% end %>
      </div>
      <div class="col-md-7">
          <%= f.text_field :title, placeholder: "タスクタイトル", maxlengh: 50 %><br>
          <%= f.text_area :detail, placeholder: "タスク詳細", maxlengh: 60, row: 10 %><br>
          <%= f.submit 'タスクを保存' %>
        <% end %>
     </div>
  </div>

</div>