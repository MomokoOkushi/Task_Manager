
<h3><%= @group.name %>のタスク一覧</h3>
<%= link_to "グループタスクを作成",new_public_group_task_path(@group) %>

<table border= 1>
    <thead>
        <tr>
            <td>日付</td>
            <td>タイトル</td>
            <td>担当者</td>
        </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <td><%= task.start_time %></td>
                <td><%= link_to task.title, public_group_task_path %></td>
                <!--担当者名の取り出し方アソシエーションの観点から聞く-->
                <% @task_users.each do |task_user|%>
                <td><%= task_user.name %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>


