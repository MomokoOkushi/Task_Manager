<div class="center">
  <h3 class="page-title m-4">一般アカウント一覧</h3>
</div>
<div class="button-box mx-auto m-2">
    <div class="button">
      <%= link_to "アカウント新規登録", new_user_registration_path %>
    </div>
</div>
<div class="center">
  <table class="content-bg">
    <thead>
      <tr>
        <td>ID</td>
        <td>氏名</td>
        <td>所属</td>
        <td>メールアドレス</td>
        <td></td>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.name, admin_user_path(user), class: "text-dark" %></td>
          <td><%= user.department %></td>
          <td><%= user.email %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>