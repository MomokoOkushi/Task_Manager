<div class="container">
    <div class="center">
      <h3 class="page-title m-4"><%= @group.name %>のタスク一覧</h3>
    </div>
    <div class="row m-1">
        <div class="button-box m-1">
            <div class="button">
                <%= link_to "グループを削除する",admin_group_path(@group), method: :delete, "data-confirm" => "本当に削除しますか？" %>
            </div>
        </div>
    </div>

    <!--グループタスク一覧-->
    <div class="row m-1">
         <div class="content-bg">
            <%= render 'public/groups/group_tasks_index', tasks: @tasks, group: @group %>
        </div>
    </div>
</div>