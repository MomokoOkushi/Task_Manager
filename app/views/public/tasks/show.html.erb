<!--エラーメッセージ-->
<div id="error_message">
  <%= render "public/shared/error_messages", resource: @comment %>
</div>

<div class="center">
  <h3 class="page-title m-4"><%= @task.group.name %>タスク</h3>
</div>

<div  class="container">
  <div class="row">
    <div class="button-box m-1">
        <div class="button">
          <%= link_to "一覧に戻る",public_group_path(@group) %><br>
        </div>
    </div>
    <div class="button-box m-1">
        <div class="button">
          <%= link_to "タスクを編集する",edit_public_group_task_path(@group, @task) %>
        </div>
    </div>
  </div>
  <div class="row p-2">
    <!--タスク詳細情報-->
    <%= render 'public/tasks/information', task: @task %>

    <div class="col content-bg">
      <h4>コメント</h4>
        <div id="comments_show">
          <%= render "public/comments/comments_show", {task: @task}%>
        </div>
      <div id="new_comment">
        <%= render "public/comments/comment_form", {task: @task, comment: @comment}%>
      </div>
    </div>
  </div>
</div>
